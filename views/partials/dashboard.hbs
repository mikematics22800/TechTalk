<div id="dashboard">
  <button id="new-post">New Post</button>
  <ul class="posts">
    {{#each posts as |post|}}
      <li class="post">
        <header>
          <h2>{{post.title}}</h2>
          <h4>Posted by {{post.username}} at {{post.createdAt}}</h4>
        </header>
        <p>{{post.content}}</p>
      </li>
    {{/each}}
  </ul>
  <div id="modal">
    <form id="make-post">
      <div class="input-container">
        <h2>Title</h2>
        <input id="post-title" type="text" pattern=".{0,48}" title="Exceeded character limit" required>
      </div>
      <div class="input-container">
        <h2>Content</h2>
        <textarea id="post-content" pattern=".{0,480}" title="Exceeded character limit" required></textarea> 
      </div>
      <div class="button-container">
        <button id="submit-post" type="submit">Submit</button>
        <button id="discard" type="button">Discard</button>
      </div>
    </form>
  </div>
</div>
<script src="/js/dashboard.js"></script>
