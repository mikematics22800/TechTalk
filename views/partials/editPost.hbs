<div class="modal">
  <form class="edit-post" id={{post.id}}>
    <div class="input-container">
      <h2>Title</h2>
      <input value={{post.title}} class="post-title" type="text" pattern=".{0,48}" title="Exceeded character limit" required>
    </div>
    <div class="input-container">
      <h2>Content</h2>
      <textarea value={{post.title}} class="post-content" pattern=".{0,480}" title="Exceeded character limit" required></textarea> 
    </div>
    <div class="button-container">
      <button class="submit-edit" type="submit">Submit</button>
      <a href="/home/dashboard">Discard</a>
    </div>
  </form>
</div>
<script src="/js/editPost.js"></script>