<div class="homepage">
  <ul class="posts">
    {{#each posts as |post|}}
      <div class="post">
        <header>
          <h2>{{post.title}}</h2>
          <h4>Posted by {{post.username}} at {{post.createdAt}}</h4>
        </header>
        <div>
          <p>{{post.content}}</p>
          <a href="/home/posts/{{post.id}}">Comments</a>
        </div>
      </div>
    {{/each}}
  </ul>
</div>